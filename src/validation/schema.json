{
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "mobilePhone": {
      "type": "string",
      "pattern": "^\\+375\\d{9}$"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    },
    "email": {
      "type": "string",
      "pattern": "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$"
    },
    "ocean": {
      "type": "string",
      "properties": {
        "Atlantic": {"type": "string", "pattern": "/Atlantic/"}
      }
    }
  },
  "required": ["firstName", "lastName", "mobilePhone", "password", "email", "ocean"]
}
